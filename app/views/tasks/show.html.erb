<h4><%= @task.title %></h4>
<p><%= @task.details %></p>
<p>
  <% if @task.completed == true %>
    &#9745
  <% else %>
    &#9744
  <% end %>
    Completed
</p>

<p><%= link_to "Edit task", edit_task_path(@task) %></p>
<p><%= link_to "Delete task",
            task_path(@task),
            method: :delete,
            data: {confirm: "Are you sure?"} %></p>
<p><%= link_to "Back", tasks_path %></p>
